<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <link
    href="https://cdn.jsdelivr.net/npm/remixicon@4.0.0/fonts/remixicon.css"
    rel="stylesheet"
/>
</head>
<body>
  <div class="w-full px-10 py-3 flex justify-between bg-zinc-800 text-white items-center">
    <h3>Pintrest</h3>
    <div class="flex gap-10 items-center">
      <a href="/profile">Profile</a> <a href="/feed">Feed</a> <a href="/logout" class="px-2 py-1  bg-red-700 text-white rounded-lg">Logout</a>

    </div>
  </div>

  <div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">
    <div class="cards flex flxwrap gap-10">
        <% posts.forEach(function(elem) { %> 
            <div class="w-32 card">
                <div class="w-full h-40 bg-sky-200 rounded-lg object-cover">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%= elem.image %>" alt="">
                </div>
                <h5 class="mt-2 text-sm"> <%= elem.title %></h5>
                <h6 class="text-xs opacity-50">@<%=elem.user.name %></h6>
            </div>
        <% }) %>
    </div>
  </div>

</body>
</html>